{
  "settings": {
    "analysis": {
      "analyzer": {
        "case_insensitive_sort": {
          "tokenizer": "keyword",
          "filter": [ "lowercase" ] 
        }
      }
    }
  },
  "mappings":{
    "blob":{
      "properties":{
        "sys_blob":{
          "type":"binary",
          "store": false,
          "doc_values": false
        },
        "sys_itemid": {
          "type": "string",
          "index": "not_analyzed"
        },
        "sys_meta":{
          "type":"string",
          "index":"no"
        }
      }
    },
    "clob":{
      "properties":{
        "sys_clob":{
          "type":"string",
          "index":"no",
          "store": false,
          "doc_values": false
        },
        "sys_itemid": {
          "type": "string",
          "index": "not_analyzed"
        },
        "sys_meta":{
          "type":"string",
          "index":"no"
        }
      }
    },
    "item":{
      "properties": {
        "title": {
          "type": "string",
          "index": "analyzed",
          "fields": {
            "sort": { 
              "type":  "string",
              "analyzer": "case_insensitive_sort"
            }
          }
        },
        "fileid": {
          "type": "string",
          "index": "not_analyzed"
        },
        "description": {
          "type": "string",
          "index": "analyzed"
        }
      },
      "dynamic_templates":[
        {
          "_s":{
            "match":"*_s",
            "mapping":{
              "type":"string",
              "index":"not_analyzed"
            }
          }
        },
        {
          "_txt":{
            "match":"*_txt",
            "mapping":{
              "type":"string",
              "index":"analyzed"
            }
          }
        },
        {
          "_b":{
            "match":"*_b",
            "mapping":{
              "type":"boolean"
            }
          }
        },
        {
          "_i":{
            "match":"*_i",
            "mapping":{
              "type":"integer"
            }
          }
        },
        {
          "_l":{
            "match":"*_l",
            "mapping":{
              "type":"long"
            }
          }
        },
        {
          "_f":{
            "match":"*_f",
            "mapping":{
              "type":"float"
            }
          }
        },
        {
          "_d":{
            "match":"*_d",
            "mapping":{
              "type":"double"
            }
          }
        },
        {
          "_dt":{
            "match":"*_dt",
            "mapping":{
              "type":"date"
            }
          }
        },
        {
          "_geo":{
            "match":"*_geo",
            "mapping":{
              "type":"geo_shape"
            }
          }
        },
        {
          "_pt":{
            "match":"*_pt",
            "mapping":{
              "type":"geo_point"
            }
          }
        },
        {
          "_nst":{
            "match":"*_nst",
            "mapping":{
              "type":"nested"
            }
          }
        },
        {
          "_obj":{
            "match":"*_obj",
            "mapping":{
              "type":"object"
            }
          }
        },
        {
          "_blob":{
            "match":"*_blob",
            "mapping":{
              "type":"binary",
              "store": false,
              "doc_values": false
            }
          }
        },
        {
          "_clob":{
            "match":"*_clob",
            "mapping":{
              "type":"string",
              "index":"no",
              "store": false,
              "doc_values": false
            }
          }
        }
      ]
    }
  }
}